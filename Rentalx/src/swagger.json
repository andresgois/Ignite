  "paths": {
    "/categories": {
      "post": {
        "tags": ["Category"],
        "sumary": "Create a neu category",
        "description": "Create a new category",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties":{
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "category name simple",
                  "description": "category description simple"
                }
              }
            }
          }
        },
        "responses":{
          "201": {
            "description": "Created"
          },
          "500": {          
            "description": "Category already exists"
          }
        }
      },
      "get": {
        "tags": ["Category"],
        "sumary": "List All categories",
        "description": "list all categories",
        "responses": {
          "200": {
            "description": "success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items":{
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "description":{
                        "type":"string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }

    },
    "/specifications":{
      "post": {
        "tags": ["Specifications"],
        "summary": "Create a specification",
        "description": "Create a new specification",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/Specification"
              }
            }
          }
        },
        "responses":{
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Specification already exists!"
          }
        }
      }
    }
  },
  "definitions": {
    "Specification": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" }
      }
    }
  }
}